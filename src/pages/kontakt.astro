---
import Layout from '~/layouts/PageLayout.astro';
import PartH3 from '~/components/widgets/PartH3.astro';
import { SITE } from '~/utils/config';

import Pfarramt from '~/parts/kontakt/pfarramt.md';
import Amtshandlungen from '~/parts/kontakt/amtshandlungen.md';
import Verkehrsmittel from '~/parts/kontakt/verkehrsmittel.md';
import Kurzparkzone from '~/parts/kontakt/kurzparkzone.md';

import OpenStreetMap from '~/components/svelte/OpenStreetMap.svelte';

import type { MetaData } from '~/types';

const metadata: MetaData = {
  title: 'Kontakt',
};

const view = [48.2231769, 16.3641052];
const zoom = 17;
const minZoom = 12;
const maxZoom = 19;
const marker = [48.2231769, 16.3641052];
const markerPopup = 'Evangelische Messiaskapelle';
const markerPath = SITE.base + '/leaflet/images';
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{metadata.title}</h1>
    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <PartH3><em>letzte Änderung</em>: Februar 2024<br /></PartH3>
      <PartH3 title="Evangelisches Pfarramt A.B. Wien-Alsergrund">
        <Pfarramt />
      </PartH3>
      <PartH3 title="Anmeldung von Amtshandlungen">
        <Amtshandlungen />
      </PartH3>
      <PartH3 title="Öffentliche Verkehrsmittel">
        <Verkehrsmittel />
      </PartH3>
      <PartH3 title="Achtung Autofahrer_innen!">
        <Kurzparkzone />
      </PartH3>
      <div class="h-fit pb-0 md:pb-0">
        <OpenStreetMap
          client:only
          view={view}
          zoom={zoom}
          minZoom={minZoom}
          maxZoom={maxZoom}
          marker={marker}
          markerPopup={markerPopup}
          markerPath={markerPath}
        />
      </div>
    </div>
  </section>
</Layout>
