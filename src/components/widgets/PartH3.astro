---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
const { title = '', icon = '' } = Astro.props;
---

<!--            class={twMerge('inline w-6 h-6 mr-2 rtl:mr-0 rtl:ml-2', icon)} -->
{title && (
    <h3>
        { icon && (
        <Icon
            name={icon}
            class='inline w-6 h-6 mb-1 mr-2 rtl:mr-0 rtl:ml-2'
        />
        )}
        {title}
    </h3>
)
}
<slot />
